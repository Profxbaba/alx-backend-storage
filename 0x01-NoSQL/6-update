// my comment

// Connect to the database specified in the command line argument
var db = new Mongo().getDB("my_db");

// Perform the update operation on the documents with name "Holberton school"
var result = db.school.updateMany(
    { "name": "Holberton school" },  // Match criteria
    { $set: { "address": "972 Mission street" } }  // Update to perform
);

// Format the result similar to older MongoDB versions for compatibility
print("WriteResult({ \"nMatched\" : " + result.matchedCount + 
      ", \"nUpserted\" : 0, \"nModified\" : " + result.modifiedCount + " })");
